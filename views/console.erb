<link rel="stylesheet" href='/estilo.css'>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="shortcut icon" href="/favicon.ico" />
<link rel="stylesheet" href='/estilo.css'>


<html>
	
	<header>
		<nav class="navbar navbar-inverse">
		    <div class="container-fluid">
		        <div class="navbar-header">
		            <a class="navbar-brand" href="/"><mark>MUNDO WUMPUS</mark></a>
		        </div>
		        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
		            <ul class="nav navbar-nav navbar-right">
		                <li>
		                    <h1>MULTIVERSE</h1>
		                </li>
		            </ul>
		        </div>
		    </div>
		</nav>
	</header>
   
	      
	       
   		
	<% if @wumpusvivo %> 		
		<div id="container">
			<div id="body">
				<br>
				<br>
				<br>
				<br>
				<br>
				<br>	
				<br>
				<br>
			
				<div id="direc" >
					<% if @north %>
						<form method="post" action="/toNorth">
						<button type="submit" name="Norte">Norte</button>
						</form>
					<% end %>
					<% if @south %>
						<form method="post" action="/toSouth">
						<button type="submit" name="Sur">Sur</button>
						</form>
					<% end %>
					<% if @east %>
						<form method="post" action="/toEast">
						<button type="submit" name="Este">Este</button>
						</form>
					<% end %>
					<% if @west %>
						<form method="post" action="/toWest">
						<button type="submit" name="Oeste">Oeste</button>
						</form>
					<% end %>	
				</div>
			
				<div id="bottom-screen-holder">
					<div id="bottom-screen">
						<div id="console">
							<h4 color="white">Entraste a la cueva <%= @mensaje %></h4>
							<br></br>
							<h4> <%= $m %></h4>	
							<h4> <%= $mensajeActual %></h4>	
							<br>
							<% if @smell %>
								<h4>Se siente un olor fetido en este cuarto</h4>
							<% end %>
							<% if @whirr %>
							<h4>Se escucha un aleteo cerca</h4>
						<% end %>
						</div>
					</div>
					
				</div>
				<div id="c-stick">
						<label>Monedas: <%=@monedas %></label>
				</div>
			
				<div id="c-stick">
					<label>Flechas: <%= @numberOfArrows %></label>
				</div>
			
				<div id="color-button-holder">
					<div id="blue-btn">
						<% if @north %>
							<% if @numberOfArrows>=1 %>
								<form method="post" action="/shootToTop">
									<button type="submit" name="shootTop">^</button>
								</form>
							<%end%>
						<% end %>
					</div>
				
					<div id="green-btn">
						<% if @west %>
							<% if @numberOfArrows>=1 %>
								<form method="post" action="/shootToLeft">
									<button type="submit" name="shootLeft"><</button>
								</form>
							<% end %>
						<% end %>
					</div>
				
					<div id="red-btn">
						<% if @south %>
							<% if @numberOfArrows>=1 %>
									<form method="post" action="/shootToBottom">
										<button type="submit" name="shootBot">v</button>
									</form>
							<% end %>
						<% end %>
					</div>
				
					<div id="yellow-btn">
						<% if @east %>
							<% if @numberOfArrows>=1 %>
								<form method="post" action="/shootToRight">
									<button type="submit" name="shootRight">></button>
								</form>
							<% end %>
						<% end %>
					</div>
				</div>
				<div id="c-stick">
					<label>Spray: <%= @numberOfSpray %></label>
				</div>
				<div id="color-button-holder">
					<div id="blue-btn">
						<% if @north %>
							<% if @numberOfSpray>=1 %>
								<form method="post" action="/sprayToTop">
									<button type="submit" name="sprayToTop">^</button>
								</form>
							<%end%>
						<% end %>
					</div>
				
					<div id="green-btn">
						<% if @west %>
							<% if @numberOfSpray>=1 %>
								<form method="post" action="/sprayToLeft">
									<button type="submit" name="sprayToLeft"><</button>
								</form>
							<% end %>
						<% end %>
					</div>
				
					<div id="red-btn">
						<% if @south %>
							<% if @numberOfSpray>=1 %>
									<form method="post" action="/sprayToBottom">
										<button type="submit" name="sprayToBot">v</button>
									</form>
							<% end %>
						<% end %>
					</div>
				
					<div id="yellow-btn">
						<% if @east %>
							<% if @numberOfSpray>=1 %>
								<form method="post" action="/sprayToRight">
									<button type="submit" name="sprayToRight">></button>
								</form>
							<% end %>
						<% end %>
					</div>
				</div>
			
			
			
			
			
			</div>
		
		</div>
	<% else %>	
		<div id="container">
			<div id="body">
				<br>
				<br>
				<br>
				<br>
				<br>
				<br>	
				<br>
				<br>
				<br>
				<br>
				<br>
				<br>
				<br>
				<br>	
				
				<div id="bottom-screen-holder">
					<div id="bottom-screen">
						<div id="console">
							<h2> Venciste al Wumpus!!!!</h2>
							
						</div>
					</div>
				</div>
			</div>
		</div>



	<% end %>
	

</html>
